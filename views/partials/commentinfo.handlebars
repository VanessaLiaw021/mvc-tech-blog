<!--Comment Section-->
<div class="comments d-flex justify-content-center">
    <div class="card mx-5 w-100">
        <div class="card-header">
            <h3>Comments</h3>
        </div>
        <div class="card-body">
            {{#each post.comments}}
            <p>{{post.comment.comment_text}}</p>
            <p class="posted">~ Posted by {{post.user.username}} on {{format_date comment.createdAt}}</p>
            <hr>
            {{/each}}
        </div>
    </div>
</div>