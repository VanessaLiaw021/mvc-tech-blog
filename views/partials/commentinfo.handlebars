<!--Comment Section-->
<div class="comments d-flex justify-content-center">
    <div class="card m-5 w-100">
        <div class="card-header">
            <h3>Comments</h3>
        </div>
        <div class="card-body">
            {{#each post.comments}}
            <p>Nice text</p>
            <p class="posted">~ Posted by user on {{format_date comment.createdAt}}</p>
            <hr>
            {{/each}}
        </div>
    </div>
</div>